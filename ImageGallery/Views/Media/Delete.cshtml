@model ImageGallery.ViewModels.MediaViewModels.MediaViewModel

@{
    ViewData["Title"] = "Удаление изображения";
}

<h1>Удаление изображения</h1>

<h3>Вы действительно хотите удалить изображение?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-4">
            Название изображения  
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
        <dt class="col-sm-4">
            Название альбома
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.CategoryTitle)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" title="Удалить изображение из альбома"/>
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>