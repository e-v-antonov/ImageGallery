@{
    ViewData["Title"] = "Связаться с разработчиком";
}

<h1>
    Связаться с разработчиком
</h1>

<hr />

<div class="container">
    <div class="row">
        <div class="col-sm-10">
            <form class="was-validated" asp-action="SendMessage" asp-controller="SendMail" asp-anti-forgery="true">
                <div class="form-group">
                    <label for="email">Введите ваш email</label>
                    <input type="text" class="form-control is-invalid" id="email" name="email" required autocomplete="off">
                    <span class="text-danger">@TempData["errorEmail"]</span>
                </div>
                <div class="form-group">
                    <label for="subject">Введите тему сообщения</label>
                    <input type="text" class="form-control is-invalid" id="subject" name="subject" required autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="message">Напишите сообщение</label>
                    <textarea class="form-control" id="message" rows="3" name="message"></textarea>
                </div>
                <input type="submit" class="btn btn-primary" value="Отправить" title="Отправить письмо">
            </form>            
        </div>
    </div>
</div>