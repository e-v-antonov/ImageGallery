@model ImageGallery.ViewModels.CategoryViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Удаление альбома";
}

<h1>Удаление альбома</h1>

<h3>Вы действительно хотите удалить альбом и все фотографии в нем?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Название альбома: 
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" title="Удалить альбом и фотографии"/> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
