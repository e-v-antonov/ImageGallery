@model ImageGallery.ViewModels.AccountModel.LoginViewModel

@{
    ViewData["Title"] = "Вход в систему";
}

<h1>
    Вход в систему
</h1>

<hr />

<div class="container">
    <div class="row">
        <form class="col-md-6 was-validated" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <label for="login" class="col-form-label">Введите логин</label>
                    <input type="text" asp-for="Login" class="form-control is-invalid" autocomplete="off" id="login" required/>
                    <span class="text-danger" asp-validation-for="Login"></span>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-form-label">Введите пароль</label>
                    <input type="password" asp-for="Password" class="form-control is-invalid" id="password" required/>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group row">
                    <input type="submit" value="Войти" class="btn btn-primary" title="Войти в систему"/>
                </div>
        </form>
    </div>
</div>